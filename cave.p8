version 43
__lua__
--global vars
pl = {
	x = 0,
	y = 0,
	spe = 1,
}

--base functions

function _init()
end

function _update()

	if btn(⬆️) then pl.y-=pl.spe end
	if btn(⬇️) then pl.y+=pl.spe end
	if btn(⬅️) then pl.x-=pl.spe end
	if btn(➡️) then pl.x+=pl.spe end
	
end

function _draw()
	cls(0)
	camera(pl.x-64,pl.y-64)
	map(64,64,0,0)
	
	spr(64,pl.x,pl.y,2,2)
end



